<div class="form">
  <%= form_for(:user, url: users_path) do |f| %>
    <h2 class="text-center">Add Team Member</h2>   
    <div class="form-group">
      <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <%= f.text_field :name, autofocus: false, class: "form-control", required: true, placeholder:"Name" %>    
        </div>
    </div>
    <div class="form-group">
      <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <%= f.email_field :email, autofocus: false, autocomplete: "email", class: "form-control", required: true, placeholder:"Email" %>    
        </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-lock"></i></span>    
        <%= f.password_field :password, autofocus: false, autocomplete: "off", class: "form-control", required: true, placeholder:"Password" %>    
      </div>
    </div>        
    <div class="form-group">
      <%= f.submit "Add Team Member", :class => "btn btn-primary login-btn btn-block" %>
    </div>
  <% end %>
</div>