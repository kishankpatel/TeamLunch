<div class="form">
  <%= form_for(:user, url: users_path) do |f| %>
    <h2>Add Team Member</h2>   
    <div class="form-group">
      <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <%= f.text_field :name, autofocus: false, class: "form-control", required: true, placeholder:"Name" %>    
        </div>
    </div>
    <div class="form-group">
      <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <%= f.email_field :email, autofocus: false, autocomplete: "email", class: "form-control", required: true, placeholder:"Email" %>    
        </div>
    </div>     
    <div class="form-group">
      <%= f.submit "Add Team Member", :class => "btn btn-secondary login-btn btn-block" %>
    </div>
  <% end %>
</div>